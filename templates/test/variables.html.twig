{% extends "base.html.twig" %}

{% block body %}
{# Tableau associatif #}

    <ul>    
    <li>Jour : {{ tableau["jour"]}}</li>
    <li>Mois : {{ tableau.mois }}</li>
    <li>Année : {{ tableau.annee }}</li>
    </ul>

    {#  tableau avec indices numériques #}
    <ul>    
        <li>{{ tableau2[0] }}</li>
        <li>{{ tableau2[1] }}</li>
        <li>{{ tableau2[2] }}</li>
    </ul>

    {#  BOUCLE FOR #}
    {% for i in 0..2 %} 
        {{ tableau2[i] }}
    {% endfor %}

    <ul>
        {% for indice, valeur in tableau %}
            <li>{{ indice }} : {{ valeur}}</li>
        {% endfor %}
    </ul>

    {# IF #}

    {% if nombre < 2 %}
        Le nombre est inférieur à 2
    {% elseif nombre < 10 %}
        Le nombre est compris entre 2 et 9
    {% else %}
        Le nombre est supérieur ou égal à 10
    {% endif %}

    {# TESTS #}
    {% if chaine is defined %}
        {{ chaine }}
    {% endif %}

    {% if chaine is defined and is empty %}
    {# ⚠ En twig, le test 'is empty' ne peut être fait que sur une variable qui existe #}
        La chaine est vide
    {% endif %}

    {# FILTRES #}
    {{ tableau.mois|upper }}

{% endblock %}