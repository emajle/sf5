{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}
{% block h1 %} Liste des livres : {% endblock %}

{% block body %}

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Auteur</th>
    </tr>
   
    {% for livre in livres %}
        <tr>
            <td>{{ livre.id }}</td>
            <td>{{ livre.titre }}</td>
            <td>{{ livre.auteur }}</td>
        </tr>
    {% endfor %}
    <tfoot>
        <th colspan=2> Nombre de livres :</th>
        <td>{{livres|length}}</td>
    </tfoot>
    
</table>
{% endblock %}
